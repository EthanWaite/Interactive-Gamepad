{
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true,
                "optionalDependencies": false
            }
        ],
        "no-tabs": "off"
    },
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "script"
    },
    "extends": "airbnb-base"
}